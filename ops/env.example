# Prometheus base URL (port-forward or in-cluster)
PROM_URL="http://localhost:9090"

# Target workload
NAMESPACE="default"
JOB_NAME="demo-batch-job"
DEPLOYMENT_NAME="demo-app"

# PromQL queries (adjust later)
FAIL_QUERY='kube_job_status_failed{job_name="demo-batch-job"} > 0'
RECOVERY_QUERY='kube_job_status_failed{job_name="demo-batch-job"} == 0'